<?xml version="1.0" encoding="utf-8"?>
<resources>
    
	<style name="Default">
        <item name="android:background">@color/background</item>
    </style>
	
	<style name="ButtonShift">
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
	<style name="AboutText">
        <item name="android:textColor">@color/customBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">all</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:linksClickable">false</item>
    </style>

</resources>